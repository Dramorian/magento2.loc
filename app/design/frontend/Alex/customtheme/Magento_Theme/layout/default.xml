<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/testlogo.png</argument>
                <argument name="logo_img_width" xsi:type="number">100</argument>
                <argument name="logo_img_height" xsi:type="number">100</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="footer">
            <container name="footer.test.container" htmlClass="pseudo-container" htmlTag="div" after="footer_links">
                <block class="Magento\Framework\View\Element\Text" name="test.label" as="test_label">
                    <action method="setText">
                        <argument xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="value" xsi:type="string">Your mom is a whore</argument>
                    </action>
                </block>
                <block class="Magento\Framework\View\Element\Template" name="test.template" as="test_template_block" template="Magento_Theme::geekhub/footer_item_template.phtml"/>
            </container>
        </referenceContainer>
    </body>
</page>
