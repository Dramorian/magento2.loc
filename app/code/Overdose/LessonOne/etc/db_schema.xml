<?xml version="1.0" encoding="UTF-8"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="overdose_lesson_one" resource="default" engine="innodb" comment="List of my friends">
        <!-- Friend Id Column -->
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Friend Id"/>

        <!-- Age Column -->
        <column xsi:type="smallint" name="age" padding="5" unsigned="true" nullable="false" comment="Age"/>

        <!-- Name Column -->
        <column xsi:type="text" name="name" nullable="false" comment="Name"/>

        <!-- Comments Column -->
        <column xsi:type="text" name="comment" nullable="true" comment="Comments"/>

        <!-- Created At Column -->
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Created At"/>

        <!-- Updated At Column -->
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Updated At"/>

        <!-- Primary Key -->
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
