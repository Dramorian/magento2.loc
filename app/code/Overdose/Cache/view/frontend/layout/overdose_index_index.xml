<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Overdose\Cache\Block\Cache"
                   name="homepage.block.cache.stuff"
                   template="Overdose_Cache::cache-show-off.phtml"
                   cacheable="false"
                   after="homepage.block">
                <arguments>
                    <argument name="view_model" xsi:type="object">Overdose\Cache\ViewModel\Cache</argument>
                </arguments>
            </block>

            <block name="skillpoints.distribution"
                   template="Overdose_Cache::skill-distributor.phtml"
                   cacheable="false"
                   after="homepage.block.cache.stuff">
            </block>

            <block name="seat.reservation"
                   template="Overdose_Cache::seat-reservation.phtml"
                   cacheable="false"
                   after="skillpoints.distribution">
            </block>

        </referenceContainer>
    </body>
</page>
