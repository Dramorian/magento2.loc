<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product.info.details">
            <block class="Magento\Catalog\Block\Product\View"
                   name="ask.question.tab"
                   as="ask.question"
                   template="Alex_AskQuestion::product/view/ask_question.phtml"
                   group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Ask a question</argument>
                </arguments>
            </block>
            <block class="Alex\AskQuestion\Block\Questions"
                   name="question.list"
                   template="Alex_AskQuestion::product/view/questions_list.phtml">
                <arguments>
                    <argument name="limit" xsi:type="number">5</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
