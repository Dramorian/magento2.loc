<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="askquestion" translate="label" sortOrder="10">
            <label>AskQuestion</label>
        </tab>
        <section id="askquestion_options" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1"
                 showInStore="1">
            <label>AskQuestion Configuration</label>
            <tab>askquestion</tab>
            <resource>Alex_AskQuestion::askquestion_configuration</resource>

            <!-- Group: General -->
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>

            <!-- Group: Cron -->
            <group id="configurable_cron" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Cron Settings</label>
                <depends>
                    <field id="askquestion_options/general/enabled">1</field>
                </depends>
                <field id="enable_auto_confirming" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enable auto confirming</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="frequency" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Frequency</label>
                    <source_model>Magento\Cron\Model\Config\Source\Frequency</source_model>
                    <!--                                        <source_model>Alex\AskQuestion\Cron\Model\Config\Source\Frequency</source_model>-->
                    <backend_model>Alex\AskQuestion\Model\Config\Source\CronConfig</backend_model>
                </field>
                <field id="time" translate="label comment" sortOrder="30" type="time" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Start Time</label>
                </field>
            </group>

            <!-- Group: Test -->
            <group id="test" translate="label" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Test Settings</label>
                <depends>
                    <field id="askquestion_options/general/enabled">1</field>
                </depends>
                <field id="multi_select_field" translate="label" type="multiselect" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Multi-Select Field</label>
                    <source_model>Alex\AskQuestion\Model\Config\Source\MultiSelectOptions</source_model>
                </field>
                <field id="select_field" translate="label" type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Select Field</label>
                    <source_model>Alex\AskQuestion\Model\Config\Source\SelectOptions</source_model>
                </field>
                <field id="text_field" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
                       showInStore="1">
                    <label>Text Field</label>
                </field>
            </group>

            <!-- Group: Sending mail -->
            <group id="email_settings" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Email Settings</label>
                <depends>
                    <field id="askquestion_options/general/enabled">1</field>
                </depends>

                <field id="mail_enable" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="template_settings_admin" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Admin Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
                <field id="template_settings_customer" translate="label" type="select" sortOrder="20" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Customer Email Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
            </group>

            <!-- Group: Customer groups settings -->
            <group id="customer_groups" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Customer groups settings</label>
                <depends>
                    <field id="askquestion_options/general/enabled">1</field>
                </depends>
                <field id="customer_groups_enable" translate="label" type="select" sortOrder="10" showInDefault="1"
                       showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="forbidden_customer_groups" translate="label" type="multiselect" sortOrder="10"
                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Customer Groups Forbidden to Ask Questions</label>
                    <source_model>Magento\Customer\Model\Config\Source\Group</source_model>
                </field>
            </group>

            <group id="additional" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1"
                   showInStore="1">
                <label>Additional</label>
                <depends>
                    <field id="askquestion_options/general/enabled">1</field>
                </depends>
                <field id="emails" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Additional Emails</label>
                    <frontend_model>Alex\AskQuestion\Block\Adminhtml\Form\Field\AdditionalEmail</frontend_model>
                    <backend_model>Magento\Config\Model\Config\Backend\Serialized\ArraySerialized</backend_model>
                </field>
            </group>


        </section>
    </system>
</config>
